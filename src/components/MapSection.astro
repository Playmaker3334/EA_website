<style>
  .map-section {
    padding: 5% 2%;
    background-color: var(--color-bg);
    position: relative;
  }
  
  .map-section h2 {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 0.5rem;
  }
  
  .subtitle {
    text-align: center;
    color: var(--color-text-secondary);
    margin-bottom: 3rem;
    font-size: 1.1rem;
  }
  
  .map-container {
    width: 100%;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.5);
    margin-bottom: 3rem;
    position: relative;
  }
  
  .contact-info {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 2rem;
    margin-bottom: 2rem;
  }
  
  .info-item {
    flex: 1;
    min-width: 300px;
    background-color: rgba(139, 107, 255, 0.08);
    border-radius: 12px;
    padding: 1.5rem;
    display: flex;
    gap: 1rem;
    align-items: flex-start;
    transition: all 0.3s ease;
  }
  
  .info-item:hover {
    background-color: rgba(139, 107, 255, 0.15);
    transform: translateY(-5px);
  }
  
  .info-item svg {
    color: var(--color-accent);
    flex-shrink: 0;
  }
  
  .info-item h3 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
  }
  
  .info-item p {
    color: var(--color-text-secondary);
    font-size: 0.95rem;
    margin-bottom: 0;
  }
  
  .info-item a {
    color: var(--color-accent);
    transition: color 0.3s ease;
  }
  
  .info-item a:hover {
    color: var(--color-accent-hover);
    text-decoration: none;
  }
  
  @media (max-width: 768px) {
    .map-section h2 {
      font-size: 2rem;
    }
    
    .contact-info {
      flex-direction: column;
    }
    
    .info-item {
      min-width: 100%;
    }
    
    .map-container {
      height: 300px;
    }
    
    .map-container iframe {
      height: 100%;
    }
  }
</style>