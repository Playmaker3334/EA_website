<style>
  .resources-container {
    padding: 2rem 0 4rem;
    min-height: 100vh;
  }
  
  .container {
    width: 90%;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    text-align: center;
  }
  
  .subtitle {
    text-align: center;
    color: var(--color-text-secondary);
    margin-bottom: 3rem;
  }
  
  .resources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }
  
  .resource-card {
    background-color: #1e1e1e;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    padding: 1.6rem;
    transition: all 0.3s ease;
    position: relative;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  .resource-card:hover {
    box-shadow: 0 0 0 2px var(--color-accent);
    transform: translateY(-3px);
  }
  
  .resource-header {
    margin-bottom: 1.2rem;
  }
  
  .resource-header h3 {
    font-size: 1.4rem;
    margin-bottom: 0.8rem;
    line-height: 1.3;
    font-weight: 600;
  }
  
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .tag {
    background-color: rgba(139, 107, 255, 0.15);
    color: var(--color-accent);
    padding: 0.3rem 0.8rem;
    border-radius: 2rem;
    font-size: 0.8rem;
    font-weight: 500;
  }
  
  .resource-content {
    margin-bottom: 1.2rem;
    flex-grow: 1;
  }
  
  .resource-content p {
    line-height: 1.6;
    color: #e0e0e0;
    font-size: 0.95rem;
  }
  
  .resource-image {
    margin: 1rem 0;
    border-radius: 0.75rem;
    overflow: hidden;
  }
  
  .resource-image img {
    width: 100%;
    height: auto;
    max-height: 12rem;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
.resource-image:hover img {
    transform: scale(1.03);
  }
  
  .resource-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .resource-meta {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
  }
  
  .resource-link {
    background: transparent;
    border: none;
    color: var(--color-text-secondary);
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0.4rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .resource-link:hover {
    color: var(--color-accent);
    background-color: rgba(139, 107, 255, 0.1);
  }
  
  /* Estilos para la sección de publicaciones */
  .publications-section {
    margin-top: 4rem;
  }
  
  .publications-section h2 {
    font-size: 1.8rem;
    margin-bottom: 2rem;
    text-align: center;
  }
  
  .publications-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .publication {
    background-color: #1e1e1e;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    padding: 1.6rem;
    transition: all 0.3s ease;
    position: relative;
    display: flex;
    flex-direction: column;
  }
  
  .publication:hover {
    box-shadow: 0 0 0 2px var(--color-accent);
    transform: translateY(-3px);
  }
  
  .publication h4 {
    font-size: 1.3rem;
    margin-bottom: 0.5rem;
    line-height: 1.3;
    padding-right: 2rem;
  }
  
  .publication-meta {
    font-size: 0.85rem;
    color: var(--color-accent);
